{% extends 'base.html.twig' %}

{% block title %}FriendRequest index{% endblock %}

{% block body %}
    <h1>FriendRequest index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>State</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for friend_request in friend_requests %}
            <tr>
                <td>{{ friend_request.id }}</td>
                <td>{{ friend_request.state }}</td>
                <td>
                    <a href="{{ path('app_friend_request_show', {'id': friend_request.id}) }}">show</a>
                    <a href="{{ path('app_friend_request_edit', {'id': friend_request.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_friend_request_new') }}">Create new</a>
{% endblock %}
